}

.save-img {
  width: 100rpx;
  height: 100rpx;
}

.edit-img {
  width: 100rpx;
  height: 100rpx;
}

.delete-img {
  margin-left: 30rpx;
  width: 40rpx;
  height: 40rpx;
}

.btns {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background: lightgray;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.chord_input_panel-bg {
  position: fixed;
  width: 100%;
  /* height: 60%; */
  background: lightgray;
  opacity: 0.9;
  bottom: 120rpx;
  left: 0;
}

.chord_input_panel-item {
  display: inline-block;
  font-size: 16px;
  height: 28px;
  line-height: 28px;
  color: #333;
  border: 1rpx solid #999;
  padding: 0px 10px;
  border-radius: 2px;
  margin: 5px 10px;
  box-sizing: border-box;
  vertical-align: middle;
  text-align: center;
}

.chord_input_panel-line {
  border-bottom: 1rpx solid #999;
  margin: 10rpx 20rpx;
}

.chord_input_panel-bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.chord_input_panel-res_bg {
  display: flex;
  flex-direction: row;
	justify-content: flex-start;
	align-content: center;
}

.chord_input_panel-res {
  margin: 20rpx;
  max-width: 100rpx;
}

.chord_input_panel-img {
  margin: 20rpx;
  width: 50rpx;
  height: 50rpx;
}

.chord_input_panel-btns {
  margin-right: 10rpx;
}

.chord_input_panel-btn {
  margin-right: 10rpx;
}

.klinput-input {
  position: absolute;
  width: 50%;
  left: 50%;
  transform: translateX(-50%);
}
